@model Infra_Mart.Models.FileUpload

@{
    ViewData["Title"] = "AddProduct";
}
<link rel="stylesheet" href="~/css/AddProduct.css" asp-append-version="true" />
<center>
<div class="row">
    <div class="col-md-4" id="addproduct">
        <form asp-action="AddProduct" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductDescription" class="control-label"></label>
                <input asp-for="ProductDescription" class="form-control" />
                <span asp-validation-for="ProductDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductPrice" class="control-label"></label>
                <input asp-for="ProductPrice" class="form-control" />
                <span asp-validation-for="ProductPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductUnit" class="control-label"></label>
                <input asp-for="ProductUnit" class="form-control" />
                <span asp-validation-for="ProductUnit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductCategoryId" class="control-label"></label>
                
                <select asp-for="ProductCategoryId" class="form-control">
                    @{
                        List<Category> catlist = ViewData["Categories"] as List<Category>;
                        foreach(Category cat in catlist)
                        {
                            <option asp-for="ProductCategoryId" value="@cat.CategoryId">@cat.CategoryName</option>
                        }

                    }
                </select>
               

                <span asp-validation-for="ProductCategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" id="productbtn" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
</center>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
