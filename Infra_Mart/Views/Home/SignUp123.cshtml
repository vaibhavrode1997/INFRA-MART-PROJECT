@{
    ViewData["Title"] = "View";
}

<div class="divcenter">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <center>
        <head>
            <meta charset="utf-8" />
            <title>Form</title>
           
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
        </head>

        <div class="row">
            <div class="col-md-4">
                <form id="adduser" novalidate class="needs-validation">
                    <div class="form-group">
                        <div class="new iconBox">
                            <i class="fa fa-user" aria-hidden="true"></i>
                        </div>
                        FirstName:<input type="text" class="form-control" id="firstname" />
                    </div>
                    <div class="form-group">
                        <div class="new iconBox">
                            <i class="fa fa-user" aria-hidden="true"></i>
                        </div>
                        LastName:<input type="text" class="form-control" id="lastname" />
                    </div>
                    <div class="form-group">
                        <div class="fl iconBox">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                        </div>
                        Email:<input type="email" class="form-control" id="email" />
                    </div>

                    <div class="form-group">
                        <div class="fl iconBox">
                            <i class="fa fa-key" aria-hidden="true"></i>
                        </div>
                        Password:<input type="text" class="form-control" id="password" />
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary" onclick="addUser()">Add</button>

                        <a href="/Home/ShowAllUser">ViewAllUsers</a>

                    </div>
                </form>
            </div>
        </div>
    </center>
</div>

