<script type="text/javascript">
    function addUser() {

        let user = {

            FirstName: $("#firstname").val(),

            LastName: $("#lastname").val(),

            Email: $("#email").val(),

            Password: $("#password").val(),

            Role: "user",

            Active: 1

        };
        console.log(user);
        let promise1 = axios.post("/Home/Register", user);
        promise1.then((response) => {
            const result = response.data;

            console.log(result);
        });
    }

</script>


